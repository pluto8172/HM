<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/action_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_16"
            android:src="@mipmap/icon_back_black" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:drawablePadding="@dimen/dp_8"
            android:ellipsize="end"
            android:text="title"
            android:textColor="@color/white_font"
            android:textSize="@dimen/sp_18" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_top_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16" />
    </RelativeLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/base_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:tabIndicatorColor="#00000000"
        app:tabIndicatorFullWidth="false"
        app:tabMode="scrollable"
        app:tabPaddingEnd="4dp"
        app:tabPaddingStart="4dp"
        app:tabRippleColor="@color/transparent"
        app:tabSelectedTextColor="@color/white_font"
        app:tabTextColor="@color/black3" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/base_vp_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
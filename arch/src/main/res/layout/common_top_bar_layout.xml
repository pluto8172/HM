<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="@dimen/common_top_bar_height"    android:background="@color/white"    android:orientation="vertical">    <androidx.appcompat.widget.AppCompatImageView        android:id="@+id/iv_back_image"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:padding="16dp"        android:src="@mipmap/icon_back_black" />    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/tv_title_text"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:textColor="@color/text_title"        android:textSize="17sp" />    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/tv_right_text"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentEnd="true"        android:layout_centerVertical="true"        android:paddingStart="16dp"        android:paddingEnd="16dp"/>    <View        android:layout_width="match_parent"        android:layout_height="0.5dp"        android:layout_alignParentBottom="true"        android:background="#b8b8b8" /></RelativeLayout>